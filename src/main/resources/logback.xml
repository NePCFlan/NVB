<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{"yyyy-MM-dd HH:mm:ss.SS"}] [%-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- control the level of output here -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>